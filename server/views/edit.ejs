 <%- include partials/header.ejs %>

 <%- include partials/main_nav.ejs %>

 <!-- Content for the Add Page-->

 <div class="container">
    <div class="row">
        <div class="offset-md-1 col-md-6"></div>
        <h1><%= title %></h1>
        <style>
            body {
                background-image: url('Assets/images/techback.jpg');
                background-size: cover;
            }
        </style>
        

        <form class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField">Contact Name</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter the Contact name"
                name="name"                
                require>
            </div>

            <div class="form-group">
                <label for="contactTextField">Contact Number</label>
                <input type="text" class="form-control"
                id="contactTextField"
                placeholder="Enter the contact Number"
                name="contact"               
                 require>
            </div>

            <div class="form-group">
                <label for="emailaddressTextArea">Email Address</label>
                <textarea type="text" class="form-control"
                id="emailaddressTextArea"
                placeholder="Enter Email Address"
                name="emailaddress"               
                 require><%= user.description %></textarea>
            </div>

            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit</button>
                <a href="/data" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>

        </form>
    </div>
</div> 

